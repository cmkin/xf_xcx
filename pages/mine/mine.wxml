<!--pages/mine/mine.wxml-->
<view class="mine">
	<view class="tx">
		<image src=""></image>
		<text>张权</text>
		<view class="edit" bindtap="goInfo">
			<text>编辑</text>
			<image src="/images/edit.png"></image>
		</view>
	</view>
	
	<view class="items">
		<view bindtap="goLink" data-item="{{item}}" class="item {{item.top?'top':''}}" wx:for="{{itemList}}">
			<text>{{item.text}}</text>
			<image src="/images/jiantou.png"></image>
		</view>
	</view>
	
</view>
