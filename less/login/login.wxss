.g_alart {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.3);
}
.g_alart .main {
  background: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  border-radius: 14px;
}
.g_alart .main .tt {
  background: #E6E6E8;
  padding: 8px;
  color: #3A3A46;
  border-radius: 14px 14px 0 0;
  text-align: center;
}
.g_alart .main .tt image {
  float: right;
  width: 40rpx;
  height: 40rpx;
}
.g_alart .main .change {
  text-align: center;
  padding: 50rpx;
  font-weight: bold;
}
.g_alart .main .change label {
  margin-right: 40rpx;
}
.g_alart .main .note {
  padding: 0 40rpx;
}
.g_alart .main .note textarea {
  border: 1px solid #9D9CA2;
  padding: 30rpx;
}
.g_alart .main .btn {
  text-align: center;
  padding: 30rpx 0;
}
.g_alart .main .btn text {
  display: inline-block;
  width: 340rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  background: #3878FE;
  opacity: 1;
  border-radius: 40px;
  color: #fff;
}
.login {
  min-height: 100vh;
  padding: 30rpx;
  background: #fff;
  box-sizing: border-box;
}
.login .tt {
  font-size: 40rpx;
  color: #000000;
  font-weight: bold;
  padding: 20rpx 0;
}
.login .items .item {
  background: #F9FAFC;
  margin-top: 26rpx;
  opacity: 1;
  box-sizing: border-box;
  width: 100%;
  border-radius: 40px;
}
.login .items .item input {
  padding: 18rpx;
  display: block;
}
.login .ol {
  text-align: right;
  color: #3F8CFF;
  font-size: 32rpx;
  margin-top: 30rpx;
}
.login .btn {
  text-align: center;
  padding: 30rpx 0;
  width: 100%;
  background: #3878FE !important;
  opacity: 1;
  border-radius: 40px;
  font-weight: 500;
  height: 78rpx;
  line-height: 22rpx;
  margin-top: 60rpx;
}
.login .btn text {
  display: inline-block;
  width: 340rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  background: #3878FE;
  opacity: 1;
  border-radius: 40px;
  color: #fff;
}
.login .wx {
  padding-top: 200rpx;
}
.login .wx image {
  width: 55rpx;
  height: 45rpx;
  display: block;
  margin: auto;
}
.login .wx text {
  color: #9D9CA2;
  display: block;
  text-align: center;
  margin-top: 20rpx;
  font-size: 28rpx;
}
