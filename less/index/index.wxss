.g_alart {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.3);
}
.g_alart .main {
  background: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  border-radius: 14px;
}
.g_alart .main .tt {
  background: #E6E6E8;
  padding: 8px;
  color: #3A3A46;
  border-radius: 14px 14px 0 0;
  text-align: center;
}
.g_alart .main .tt image {
  float: right;
  width: 40rpx;
  height: 40rpx;
}
.g_alart .main .change {
  text-align: center;
  padding: 50rpx;
  font-weight: bold;
}
.g_alart .main .change label {
  margin-right: 40rpx;
}
.g_alart .main .note {
  padding: 0 40rpx;
}
.g_alart .main .note textarea {
  border: 1px solid #9D9CA2;
  padding: 30rpx;
}
.g_alart .main .btn {
  text-align: center;
  padding: 30rpx 0;
}
.g_alart .main .btn text {
  display: inline-block;
  width: 340rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  background: #3878FE;
  opacity: 1;
  border-radius: 40px;
  color: #fff;
}
.index .banner .item {
  display: block;
  width: 100vw;
  height: 260rpx;
}
.index .banner .item image {
  display: block;
  width: 100%;
  height: 260rpx;
}
.index .banner swiper-item,
.index .banner swiper {
  display: block;
  width: 100vw;
  height: 260rpx;
}
.index .cd_list {
  padding: 20px 0;
  background: #fff;
}
.index .cd_list .item {
  text-align: center;
  float: left;
  width: 33.33%;
  padding: 20rpx 0;
}
.index .cd_list .item image {
  display: block;
  width: 100rpx;
  height: 100rpx;
  margin: auto;
}
.index .cd_list .item text {
  display: block;
  text-align: center;
  color: #5D5D60;
  font-size: 28rpx;
  padding-top: 10rpx;
}
.index .hzbj {
  padding: 30rpx;
  margin: 30rpx;
  background: #FFFFFF;
  box-shadow: 0px 3px 6px #ECF0F5;
  opacity: 1;
  border-radius: 12px;
}
.index .hzbj .t > text {
  font-weight: bold;
  color: #3A3A46;
  font-size: 34rpx;
}
.index .hzbj .t .r {
  font-size: 28rpx;
  color: #9D9CA2;
  float: right;
}
.index .hzbj .t .r image {
  width: 26rpx;
  height: 26rpx;
  position: relative;
  top: 2px;
}
.index .hzbj .is {
  margin-top: 40rpx;
  display: flex;
}
.index .hzbj .is .i {
  flex: 1;
  text-align: center;
  color: #5D5D60;
  font-size: 32rpx;
}
.index .hzbj .is .i text {
  display: block;
  color: #FF5334;
  font-weight: bold;
  font-size: 40rpx;
  margin-bottom: 20rpx;
}
.index .news_list {
  padding: 30rpx;
  background: #fff;
}
.index .news_list .tt {
  font-size: 32rpx;
  font-weight: bold;
  color: #3A3A46;
  position: relative;
  margin-bottom: 10px;
  padding-left: 14rpx;
}
.index .news_list .tt::after {
  content: '';
  width: 4rpx;
  height: 34rpx;
  background: #3878FE;
  opacity: 1;
  position: absolute;
  left: 0;
  top: 2px;
}
.index .news_list .i {
  border-bottom: 1px solid #E6E6E8;
  position: relative;
  padding: 20rpx 0;
  padding-right: 120rpx;
}
.index .news_list .i > image {
  position: absolute;
  right: 0;
  top: 20rpx;
  width: 100px;
  height: 78px;
  background: #4D5DFD;
  opacity: 1;
  border-radius: 8px;
}
.index .news_list .i .left {
  padding-right: 120rpx;
}
.index .news_list .i .left > text {
  display: block;
  font-size: 32rpx;
  color: #5D5D60;
  margin-bottom: 20rpx;
}
.index .news_list .i .left .info {
  color: #9D9CA2;
  font-size: 28rpx;
}
.index .news_list .i .left .info text {
  color: #9D9CA2;
  font-size: 28rpx;
}
.index .news_list .i .left .info text:last-child {
  float: right;
}
