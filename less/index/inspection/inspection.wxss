.inspection .view .li {
  border-bottom: 1px solid #E7EBF0;
  width: 90%;
  margin: auto;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #333;
}
.inspection .view .li .r {
  float: right;
  color: #83838B;
}
.inspection .view .li .r image {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  position: relative;
  top: 3px;
}
.inspection .view .li .r input {
  text-align: right;
}
.inspection .view .li .r textarea {
  display: block;
  width: 75vw;
}
.inspection .view .li .zhaop {
  width: 80%;
}
.inspection .view .li .zhaop .aa {
  float: left;
  width: 15%;
  margin-left: 4.5%;
  height: 80rpx;
  position: relative;
  margin-bottom: 26rpx;
}
.inspection .view .li .zhaop .aa .st {
  display: block;
  width: 100%;
  height: 100%;
}
.inspection .view .li .zhaop .aa .del {
  position: absolute;
  right: 0;
  top: 0;
  width: 40rpx;
  height: 40rpx;
  z-index: 5;
  transform: translate(50%, -50%);
}
.inspection .view .li .zhaop .bno {
  background: none;
  float: left;
  width: 15%;
  margin-left: 5%;
  height: 80rpx;
  position: relative;
  margin-bottom: 26rpx;
}
.inspection .view .white {
  background-color: #fff;
}
.inspection .btns {
  text-align: center;
  padding: 30rpx;
  background-color: #3878FE;
  color: #fff;
  font-size: 32rpx;
  border-radius: 40px;
  width: 80%;
  margin: 0 auto;
  margin-top: 30rpx;
  margin-bottom: 80rpx;
}
