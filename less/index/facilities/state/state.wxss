.g_alart {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.3);
}
.g_alart .main {
  background: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  border-radius: 14px;
}
.g_alart .main .tt {
  background: #E6E6E8;
  padding: 8px;
  color: #3A3A46;
  border-radius: 14px 14px 0 0;
  text-align: center;
}
.g_alart .main .tt image {
  float: right;
  width: 40rpx;
  height: 40rpx;
}
.g_alart .main .change {
  text-align: center;
  padding: 50rpx;
  font-weight: bold;
}
.g_alart .main .change label {
  margin-right: 40rpx;
}
.g_alart .main .note {
  padding: 0 40rpx;
}
.g_alart .main .note textarea {
  border: 1px solid #9D9CA2;
  padding: 30rpx;
}
.g_alart .main .btn {
  text-align: center;
  padding: 30rpx 0;
}
.g_alart .main .btn text {
  display: inline-block;
  width: 340rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  background: #3878FE;
  opacity: 1;
  border-radius: 40px;
  color: #fff;
}
.state .tabs {
  display: flex;
  padding: 20rpx 0;
  background-color: #fff;
  color: #3A3A46;
  border-top: 1px solid #E6E6E8;
  border-bottom: 1px solid #E6E6E8;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}
.state .tabs .item {
  flex: 1;
  transition: all 0.5s;
  position: relative;
  text-align: center;
}
.state .tabs .item::after {
  content: '';
  width: 40rpx;
  height: 2px;
  border-radius: 5px;
  background: #3878FE;
  opacity: 0;
  transition: all 0.5s;
  position: absolute;
  bottom: -16rpx;
  left: 50%;
  transform: translateX(-50%);
}
.state .tabs .item image {
  position: absolute;
  right: 10%;
  top: 23%;
  transform: rotate(90deg);
  width: 30rpx;
  height: 30rpx;
}
.state .tabs .jt {
  flex: 1.5;
  text-align: right;
  padding-right: 60rpx;
}
.state .tabs .active {
  color: #3878FE;
}
.state .tabs .active::after {
  opacity: 1;
}
.state .dselects {
  position: fixed;
  top: 85rpx;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}
.state .dselects .mm {
  background-color: #fff;
  display: flex;
}
.state .dselects .mm .left {
  width: 320rpx;
  background-color: #E7EBF0;
}
.state .dselects .mm .left view {
  text-align: center;
  position: relative;
}
.state .dselects .mm .left view::after {
  display: none;
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  width: 3px;
  height: 50%;
  background-color: #3878FE;
  transform: translateY(-50%);
}
.state .dselects .mm .left .active {
  background-color: #fff;
  color: #3878FE;
}
.state .dselects .mm .left .active::after {
  display: block;
}
.state .dselects .mm .right {
  width: 100%;
}
.state .dselects .mm .right view {
  padding-left: 90rpx;
}
.state .dselects .mm .right .active {
  color: #3878FE;
}
.state .dselects .mm > view {
  max-height: 70vh;
  overflow-y: auto;
}
.state .dselects .mm > view view {
  color: #3A3A46;
  font-size: 28rpx;
  padding: 24rpx;
}
.state .items {
  padding-top: 90rpx;
}
.state .items .item {
  background: #FFFFFF;
  box-shadow: 0px 3px 6px #EBEFF3;
  opacity: 1;
  border-radius: 12rpx;
  padding: 20rpx;
  margin: 30rpx;
}
.state .items .item view {
  display: flex;
  padding: 10rpx 0;
}
.state .items .item text:first-child {
  width: 200rpx;
  color: #9D9CA2;
}
