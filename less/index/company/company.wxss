.g_alart {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.3);
}
.g_alart .main {
  background: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  border-radius: 14px;
}
.g_alart .main .tt {
  background: #E6E6E8;
  padding: 8px;
  color: #3A3A46;
  border-radius: 14px 14px 0 0;
  text-align: center;
}
.g_alart .main .tt image {
  float: right;
  width: 40rpx;
  height: 40rpx;
}
.g_alart .main .change {
  text-align: center;
  padding: 50rpx;
  font-weight: bold;
}
.g_alart .main .change label {
  margin-right: 40rpx;
}
.g_alart .main .note {
  padding: 0 40rpx;
}
.g_alart .main .note textarea {
  border: 1px solid #9D9CA2;
  padding: 30rpx;
}
.g_alart .main .btn {
  text-align: center;
  padding: 30rpx 0;
  position: relative;
}
.g_alart .main .btn text {
  display: inline-block;
  width: 340rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  background: #3878FE;
  opacity: 1;
  border-radius: 40px;
  color: #fff;
}
.g_alart .main .btn button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.company .search_w {
  background-color: #fff;
  padding: 15rpx 30rpx;
  border-top: 1px solid #E7EBF0;
  border-bottom: 1px solid #E7EBF0;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
  box-sizing: border-box;
}
.company .search {
  padding: 5px;
  background: #F7F8FA;
  border-radius: 30px;
  position: relative;
  padding-left: 90rpx;
  box-sizing: border-box;
  width: 100%;
}
.company .search image {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 10px;
  top: 2px;
}
.company .search input {
  display: block;
  width: 100%;
}
.company .items {
  padding: 30rpx;
  padding-top: 120rpx;
}
.company .items .item {
  margin-bottom: 30rpx;
  background-color: #FFFFFF;
  padding: 20rpx 30rpx;
  position: relative;
  box-shadow: 0px 3px 6px rgba(152, 160, 165, 0.16);
  opacity: 1;
  border-radius: 12px;
}
.company .items .item .t {
  color: #707070;
  font-size: 32rpx;
  margin-bottom: 10rpx;
}
.company .items .item .addr image {
  width: 20rpx;
  height: 20rpx;
  margin-right: 10rpx;
}
.company .items .item .addr text {
  color: #B6BCC4;
  font-size: 28rpx;
}
.company .items .item > image {
  position: absolute;
  right: 30rpx;
  top: 35rpx;
  width: 40rpx;
  height: 50rpx;
}
