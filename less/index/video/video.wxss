.video {
  min-height: 100vh;
  background-color: #FFFFFF;
}
.video .ul {
  padding: 20rpx;
  box-sizing: border-box;
}
.video .ul .li {
  border-radius: 20rpx;
  box-shadow: 0px 2px 6px rgba(226, 231, 240, 0.82);
  margin-bottom: 20rpx;
  float: left;
  width: 32%;
  padding: 40rpx 20rpx;
  box-sizing: border-box;
  margin-right: 2%;
}
.video .ul .li image {
  display: block;
  width: 60rpx;
  height: 60rpx;
  margin: auto;
}
.video .ul .li text {
  display: block;
  text-align: center;
  font-size: 26rpx;
  color: #5D5D60;
}
.video .ul .li text:nth-child(2) {
  padding: 16rpx 0;
}
.video .ul .li text:last-child {
  width: 120rpx;
  border: 1px solid #707070;
  border-radius: 20rpx;
  margin: auto;
}
.video .ul .li:nth-child(3n) {
  margin: 0;
}
.video .ul .active {
  background-color: #3F8CFF;
  color: #fff;
}
.video .ul .active text {
  color: #fff;
}
.video .ul .active text:nth-child(3) {
  border-color: #fff;
  background-color: #fff;
  color: #3F8CFF;
}
