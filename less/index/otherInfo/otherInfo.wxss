.g_alart {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.3);
}
.g_alart .main {
  background: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  border-radius: 14px;
}
.g_alart .main .tt {
  background: #E6E6E8;
  padding: 8px;
  color: #3A3A46;
  border-radius: 14px 14px 0 0;
  text-align: center;
}
.g_alart .main .tt image {
  float: right;
  width: 40rpx;
  height: 40rpx;
}
.g_alart .main .change {
  text-align: center;
  padding: 50rpx;
  font-weight: bold;
}
.g_alart .main .change label {
  margin-right: 40rpx;
}
.g_alart .main .note {
  padding: 0 40rpx;
}
.g_alart .main .note textarea {
  border: 1px solid #9D9CA2;
  padding: 30rpx;
}
.g_alart .main .btn {
  text-align: center;
  padding: 30rpx 0;
  position: relative;
}
.g_alart .main .btn text {
  display: inline-block;
  width: 340rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  background: #3878FE;
  opacity: 1;
  border-radius: 40px;
  color: #fff;
}
.g_alart .main .btn button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.otherInfo .fix {
  position: fixed;
  top: 0rpx;
  left: 0;
  z-index: 100;
  background: #fff;
  width: 100%;
  padding: 30rpx;
  padding-bottom: 8px;
  padding-top: 0;
  box-sizing: border-box;
  display: flex;
}
.otherInfo .fix .search {
  padding: 5px;
  background: #F7F8FA;
  border-radius: 30px;
  position: relative;
  padding-left: 80rpx;
  box-sizing: border-box;
  width: 100%;
}
.otherInfo .fix .search > image {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 8px;
  top: 4px;
}
.otherInfo .fix .search input {
  display: inline-block;
  width: 100%;
}
.otherInfo .fix .r {
  padding-top: 5px;
  text-align: right;
  width: 350rpx;
  color: #3878FE;
  display: inline-block;
}
.otherInfo .fix .r image {
  width: 30rpx;
  height: 30rpx;
  position: relative;
  top: 2px;
}
.otherInfo .tables {
  padding-top: 100rpx;
  padding-bottom: 40rpx;
}
.otherInfo .tables .item {
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #5D5D60;
}
.otherInfo .tables .item > text {
  flex: 1;
  padding: 10px 15px;
  font-size: 28rpx;
}
.otherInfo .tables .item > view {
  flex: 1;
  padding: 10px 15px;
  font-size: 28rpx;
}
.otherInfo .tables .item > view text {
  font-size: 28rpx;
}
.otherInfo .tables .tt {
  color: #3A3A46;
}
.otherInfo .tables .item:nth-child(odd) {
  background-color: #E8F1FF;
}
.otherInfo .tables .item:nth-child(even) {
  background-color: #fff;
}
