.g_alart {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.3);
}
.g_alart .main {
  background: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  border-radius: 14px;
}
.g_alart .main .tt {
  background: #E6E6E8;
  padding: 8px;
  color: #3A3A46;
  border-radius: 14px 14px 0 0;
  text-align: center;
}
.g_alart .main .tt image {
  float: right;
  width: 40rpx;
  height: 40rpx;
}
.g_alart .main .change {
  text-align: center;
  padding: 50rpx;
  font-weight: bold;
}
.g_alart .main .change label {
  margin-right: 40rpx;
}
.g_alart .main .note {
  padding: 0 40rpx;
}
.g_alart .main .note textarea {
  border: 1px solid #9D9CA2;
  padding: 30rpx;
}
.g_alart .main .btn {
  text-align: center;
  padding: 30rpx 0;
}
.g_alart .main .btn text {
  display: inline-block;
  width: 340rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  background: #3878FE;
  opacity: 1;
  border-radius: 40px;
  color: #fff;
}
.new_details {
  padding: 30rpx;
  background-color: #fff;
  margin-top: 1px;
}
.new_details .title {
  font-size: 34rpx;
  font-weight: bold;
  color: #3A3A46;
}
.new_details .time {
  padding: 30rpx 0;
  color: #9D9CA2;
  font-size: 28rpx;
}
.new_details .time text {
  margin-right: 40rpx;
}
.new_details .img image {
  display: block;
  width: 100%;
  height: 280rpx;
}
.new_details .content {
  padding: 50rpx 0;
  color: #5D5D60;
  font-size: 28rpx;
  line-height: 50rpx;
}
.new_details .icons {
  border-top: 1px solid #E6E6E8;
  border-bottom: 1px solid #E6E6E8;
  padding: 5px 0;
  margin-bottom: 40rpx;
  display: flex;
}
.new_details .icons .i {
  position: relative;
  text-align: center;
  flex: 1;
  color: #9DC5FF;
  font-size: 28rpx;
}
.new_details .icons .i image {
  width: 50rpx;
  height: 50rpx;
}
.new_details .icons .i text {
  position: relative;
  top: -14rpx;
  left: 5px;
}
.new_details .icons button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
