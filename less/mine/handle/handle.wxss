.g_alart {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.3);
}
.g_alart .main {
  background: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  border-radius: 14px;
}
.g_alart .main .tt {
  background: #E6E6E8;
  padding: 8px;
  color: #3A3A46;
  border-radius: 14px 14px 0 0;
  text-align: center;
}
.g_alart .main .tt image {
  float: right;
  width: 40rpx;
  height: 40rpx;
}
.g_alart .main .change {
  text-align: center;
  padding: 50rpx;
  font-weight: bold;
}
.g_alart .main .change label {
  margin-right: 40rpx;
}
.g_alart .main .note {
  padding: 0 40rpx;
}
.g_alart .main .note textarea {
  border: 1px solid #9D9CA2;
  padding: 30rpx;
}
.g_alart .main .btn {
  text-align: center;
  padding: 30rpx 0;
}
.g_alart .main .btn text {
  display: inline-block;
  width: 340rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  background: #3878FE;
  opacity: 1;
  border-radius: 40px;
  color: #fff;
}
.handle {
  padding: 30rpx;
}
.handle .fix {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  background: #fff;
  width: 100%;
  padding: 30rpx;
  padding-bottom: 3px;
  box-sizing: border-box;
}
.handle .tabs {
  display: flex;
  padding: 20rpx 0;
  color: #5D5D60;
}
.handle .tabs .item {
  flex: 1;
  transition: all 0.5s;
  position: relative;
}
.handle .tabs .item::after {
  content: '';
  width: 40rpx;
  height: 2px;
  border-radius: 5px;
  background: #3878FE;
  opacity: 0;
  transition: all 0.5s;
  position: absolute;
  bottom: -10rpx;
  left: 5px;
}
.handle .tabs .item image {
  position: absolute;
  right: 10%;
  top: 23%;
  transform: rotate(90deg);
  width: 30rpx;
  height: 30rpx;
}
.handle .tabs .jt {
  flex: 1.5;
  text-align: right;
  padding-right: 60rpx;
}
.handle .tabs .active {
  color: #3878FE;
}
.handle .tabs .active::after {
  opacity: 1;
}
.handle .tabs .item {
  text-align: center;
}
.handle .tabs .item::after {
  left: 50%;
  transform: translateX(-50%);
}
.handle .items {
  padding-top: 120rpx;
}
.handle .items .item {
  box-shadow: 0px 3px 6px #DBE2EA;
  border-radius: 16px;
  padding: 40rpx;
  padding-top: 20rpx;
  margin-bottom: 30rpx;
  background: #fff;
}
.handle .items .item .top {
  position: relative;
  padding: 30rpx 0;
  border-bottom: 1px solid #E6E6E8;
}
.handle .items .item .top text {
  font-weight: 500;
  font-size: 34rpx;
}
.handle .items .item .top .r {
  position: absolute;
  right: 0;
  top: -20rpx;
  padding: 5px 8px;
  width: 40rpx;
  background: #FF606B;
  color: #fff;
  text-align: center;
  border-radius: 0px 0px 33px 33px;
  font-size: 24rpx;
}
.handle .items .item .top .org {
  background: #FFBD62;
}
.handle .items .item .top .blue {
  background: #4B9EFF;
}
.handle .items .item .top .orgs {
  background: #FF6724;
  padding: 0;
  width: 60rpx;
  padding: 3px;
  font-size: 26rpx;
}
.handle .items .item .li {
  margin-top: 20rpx;
  color: #5D5D60;
}
.handle .items .item .li text:last-child {
  float: right;
  color: #3A3A46;
}
.handle .items .item .li .org {
  color: #FF5334 !important;
}
.handle .items .item .li .green {
  color: #00BF67 !important;
}
