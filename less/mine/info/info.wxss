.g_alart {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.3);
}
.g_alart .main {
  background: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  border-radius: 14px;
}
.g_alart .main .tt {
  background: #E6E6E8;
  padding: 8px;
  color: #3A3A46;
  border-radius: 14px 14px 0 0;
  text-align: center;
}
.g_alart .main .tt image {
  float: right;
  width: 40rpx;
  height: 40rpx;
}
.g_alart .main .change {
  text-align: center;
  padding: 50rpx;
  font-weight: bold;
}
.g_alart .main .change label {
  margin-right: 40rpx;
}
.g_alart .main .note {
  padding: 0 40rpx;
}
.g_alart .main .note textarea {
  border: 1px solid #9D9CA2;
  padding: 30rpx;
}
.g_alart .main .btn {
  text-align: center;
  padding: 30rpx 0;
}
.g_alart .main .btn text {
  display: inline-block;
  width: 340rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  background: #3878FE;
  opacity: 1;
  border-radius: 40px;
  color: #fff;
}
.info form {
  display: block;
}
.info .items .item {
  background-color: #fff;
  padding: 30rpx;
  position: relative;
  border-bottom: 1px solid #E6E6E8;
}
.info .items .item > text {
  color: #3A3A46;
  font-size: 32rpx;
}
.info .items .item .r {
  float: right;
}
.info .items .item .r image {
  width: 60px;
  height: 60px;
  background: #9FC5FF;
  opacity: 1;
  border-radius: 4px;
}
.info .items .item .r input {
  text-align: right;
  color: #5D5D60;
}
.info .items .item:first-child > text {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 30rpx;
}
.info .btn {
  text-align: center;
  padding: 30rpx 0;
  width: 686rpx;
  height: 78rpx;
  line-height: 22rpx;
  background-color: #3878FE !important;
  opacity: 1;
  border-radius: 40px;
  margin-top: 80rpx;
}
.info .btn text {
  display: inline-block;
  width: 340rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  background: #3878FE;
  opacity: 1;
  border-radius: 40px;
  color: #fff;
}
